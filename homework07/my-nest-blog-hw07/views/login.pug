doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="color-scheme", content="light dark")
    link(rel="stylesheet", href="css/pico.classless.min.css")
    title=title
  body(style="background-color: white")
    main.container(style="max-width: 600px; min-height: 90vh; margin: 0 auto; background-color: white; padding-left: 25px")
      h2(style="color: #111111") Login user
      form(method="POST" action="/api/v1/users/login" style="flex: 1; flex-direction: column; justify-content: center; align-items: center; color: #333333;")
        label(style="color: #333333") Email
        input(style="margin-top: 25px; background-color: #fefefe; margin-bottom: 25px; color: #333333; width: 100%" name="email", type="email")
        label(style="color: #333") Password
        input(style="margin-top: 25px; background-color: #fefefe;  margin-bottom: 25px; color: #333333; ; width: 100%" name="password", type="password")
        
        button(type="submit" style="margin-top: 25px; margin-bottom: 25px; color: #333; width: 100%") Login
        br
        a(href="/sign-up" style="margin-top: 25px; margin-bottom: 25px; color: #333; width: 100%") Sign Up

    include includes/footer.pug
